@model Cidade

<h1>Cadastro Cidade</h1>

<mensagem texto="@TempData["msg"]"></mensagem>

<form asp-action="cadastrar">

    <div class="mb-3">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
    </div>


    <div class="mb-3">
        <h2>
            <span class="badge bg-danger">Não há nenhum Estado Cadastrado !</span>
            <a asp-action="cadastrar" asp-controller="estado" class="btn btn-outline-primary">Cadastrar Estado</a>
        </h2>
    </div>

    <div class="mb-3">
        <label asp-for="Estado"></label>
        <select class="form-select" asp-items="@ViewBag.estados" asp-for="EstadoId">
            <option>Selecione</option>
        </select>
    </div>




    <button class="btn btn-primary">Cadastrar</button>

</form>