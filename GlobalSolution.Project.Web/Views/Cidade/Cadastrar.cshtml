@model Cidade

<h1>Cadastro Cidade</h1>

<mensagem texto="@TempData["msg"]"></mensagem>

@if (@ViewBag.qtdeEstado < 1)
{
    <div class="mb-3">
        <h1>
            <span class="badge bg-danger">
                Não há nenhum Estado Cadastrado !
                Para cadastrar a cidade é necessário realizar o cadastro de um Estado
            </span>
        </h1>
    </div>
    <a asp-action="cadastrar" asp-controller="estado" class="btn btn-outline-primary">Cadastrar Estado</a>
}
else
{
    <form asp-action="cadastrar">

        <partial name="_Form" />

        <button class="btn btn-primary">Cadastrar</button>
        <a asp-action="index" class="btn btn-outline-dark">Cidades</a>
    </form>
}
