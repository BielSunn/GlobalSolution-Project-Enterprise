@model Usuario


<h1>Login</h1>

<mensagem texto="@TempData["msg"]"></mensagem>

<form asp-action="UsuarioLogin">

    <div class="mb-3">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>


    <div class="mb-3">
        <label asp-for="Senha"></label>
        <input asp-for="Senha" class="form-control" />
    </div>

    <button class="btn btn-primary">Logar</button>
    <a asp-action="UsuarioCadastro" class="btn btn-outline-dark">Cadastrar</a>

</form>


